<link rel="stylesheet" href="/styles/style.css">
<body>
    <header>
        <nav>
            <div class="title">
                <h1>Amazyn</h1>
                <p><%- address %> </p>
            </div>
            <div class="searcher">
                    <input type="text" placeholder="Search" class="searcher-input">
                    <a href=""class="search-icon"></a>
            </div>
            <div class="user-contain">
                <ul>
                    <span class="number-cart"><%=Number_products%></span>
                    <a  href="" class="cart"></a>
                    <a href="" class="user"></a>
                </ul>
            </div>
        </nav>
        <div></div>
    </header>
    <div class="line"></div>
    <main>
        <section>
            <% if (products.length > 0){ %> 
                <% products.forEach(product => { %> 
                    <div class="div-product">
                        <h1><%=product.name %> </h1>
                        <img src="" alt="">
                        <p></p>
                    </div>
                    <% }) %> 
                <% } else {%> 
                    <p>There are not products...</p>
                    <% } %> 
        </section>
        <section></section>
        <section></section>
    </main>
    <footer>
        <div>
            <a href="">back to top</a>
        </div>
        <section>
            <!--  -->
        </section>
    </footer>
    <script src="./js/index.js" type="modules"></script>
</body>